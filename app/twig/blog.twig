                                        </li>
                                        <li class="list-item ttu text-orange bb-none">
                                            design
                                            <span class="icon-fl mr10 pull-left">&#xe800</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="content-right-nav mb45">
                            <div class="b-news">
                                <div class="record-info__date title-allocation-lines mb20"><h5>popular posts</h5></div>
                                <ul class="b-news__list">
                                    {% for i in 1..3 %}
                                        {% include "elements/block-news-item.twig" with
                                        {"news_icon" : "http://placehold.it/70x70",
                                        "news_title" : "Lenin: zombie?",
                                        "news_date": "03/02/2008"} %}
