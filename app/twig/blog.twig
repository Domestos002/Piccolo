                    {% endfor %}
                </div>
            <div class="col-xs-12 col-sm-4 ">
                    <section class="content-right-nav">
                        <form class="input-group mb45 " role="search">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-default icon-fl">&#xE806</button>
                            </span>
                        </form>

                        <div class="content-right-nav centered mb45">
                            <div class="b-categories">
                                <div class="record-info__date title-allocation-lines mb20"><h5>categories</h5></div>
                                <div class="dashed-list">
                                    <ul class="list-group clearfix">
                                        <li class="list-item ttu text-orange">
                                            design
                                            <span class="icon-fl mr10 pull-left">&#xe800</span>
                                        </li>
                                        <li class="list-item ttu text-orange">
