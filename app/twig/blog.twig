{% extends "layouts/main.twig" %}
{% block pageContent %}
    <div class="content mb50">
        <div class="container">
            <div class="row mb65">
                <div class="col-xs-12 col-sm-8  post-list">
                    {% for i in 1..3 %}
                        {% include "elements/blog_post.twig" with
                        {"record_date" : "10/11/13",
